@model Order

@{
    ViewData["Title"] = $"Order Details #{Model.Id}";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    string statusBg = Model.Status switch
    {
        "Processing" => "bg-primary",
        "Shipped" => "bg-info text-white",
        "Completed" => "bg-success",
        "Cancelled" => "bg-danger",
        "Pending Payment" => "bg-warning text-dark",
        _ => "bg-secondary"
    };
}

@* --- HEADER --- *@
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb small mb-1">
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Orders</a></li>
                <li class="breadcrumb-item active">Order #@Model.Id</li>
            </ol>
        </nav>
        <h2 class="fw-bold mb-0">Mission Parameters <span class="text-muted">#@Model.Id</span></h2>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-secondary" onclick="window.print()">
            <i class="bi bi-printer me-2"></i>Print Invoice
        </button>
        <a asp-action="Index" class="btn btn-light border">Back to List</a>
    </div>
</div>

<div class="row g-4">
    @* --- CỘT TRÁI: THÔNG TIN GIAO HÀNG --- *@
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm rounded-4 mb-4">
            <div class="card-header bg-white py-3 border-bottom">
                <h6 class="fw-bold mb-0 text-uppercase small tracking-widest text-primary">Shipping & Customer Intel</h6>
            </div>
            <div class="card-body p-4">
                <div class="row g-4">
                    <div class="col-md-6">
                        <p class="small text-muted mb-1 text-uppercase fw-bold">Recipient Name</p>
                        <p class="h6 fw-bold">@Model.CustomerName</p>
                    </div>
                    <div class="col-md-6">
                        <p class="small text-muted mb-1 text-uppercase fw-bold">Account Email</p>
                        <p class="h6">@Model.User?.Email</p>
                    </div>
                    <div class="col-md-6">
                        <p class="small text-muted mb-1 text-uppercase fw-bold">Comm-Link (Phone)</p>
                        <p class="h6">@Model.PhoneNumber</p>
                    </div>
                    <div class="col-md-6">
                        <p class="small text-muted mb-1 text-uppercase fw-bold">Order Date</p>
                        <p class="h6">@Model.OrderDate.ToString("f")</p>
                    </div>
                    <div class="col-12">
                        <p class="small text-muted mb-1 text-uppercase fw-bold">Deployment Destination (Address)</p>
                        <p class="h6 mb-0 p-3 bg-light rounded border-start border-primary border-4">@Model.ShippingAddress</p>
                    </div>
                </div>
            </div>
        </div>

        @* --- DANH SÁCH SẢN PHẨM --- *@
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="card-header bg-white py-3 border-bottom">
                <h6 class="fw-bold mb-0 text-uppercase small tracking-widest text-primary">Cargo Manifest (Items)</h6>
            </div>
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="bg-light small fw-bold">
                        <tr>
                            <th class="ps-4">Product Name</th>
                            <th class="text-center">Qty</th>
                            <th class="text-end">Unit Price</th>
                            <th class="text-end pe-4">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in Model.OrderDetails)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <img src="@(detail.Product?.ImageUrl ?? "/images/placeholder.png")" class="rounded border me-3" style="width: 50px; height: 50px; object-fit: cover;" />
                                        <div class="fw-bold">@detail.Product?.Name</div>
                                    </div>
                                </td>
                                <td class="text-center fw-bold">@detail.Quantity</td>
                                <td class="text-end text-muted">@detail.Price.ToString("N0")₫</td>
                                <td class="text-end pe-4 fw-bold">@((detail.Quantity * detail.Price).ToString("N0"))₫</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="bg-light border-top">
                        <tr class="fw-bold">
                            <td colspan="3" class="text-end ps-4 py-3">TOTAL FUNDING:</td>
                            <td class="text-end pe-4 py-3 h5 fw-bold text-primary mb-0">@Model.TotalAmount.ToString("N0")₫</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    @* --- CỘT PHẢI: TRẠNG THÁI & CẬP NHẬT --- *@
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm rounded-4 mb-4">
            <div class="card-header bg-white py-3 border-bottom">
                <h6 class="fw-bold mb-0 text-uppercase small tracking-widest text-primary">Update Mission Status</h6>
            </div>
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <span class="badge @statusBg px-4 py-2 fs-6 rounded-pill shadow-sm mb-3">@Model.Status.ToUpper()</span>
                </div>

                <form asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post" class="bg-light p-3 rounded border border-dashed">
                    <label class="form-label small fw-bold mb-2">NEW STATUS</label>
                    <div class="d-grid gap-2">
                        <select name="status" class="form-select border-0 shadow-sm mb-3">
                            <option value="Pending Payment" selected="@(Model.Status == "Pending Payment")">Pending Payment</option>
                            <option value="Processing" selected="@(Model.Status == "Processing")">Processing</option>
                            <option value="Shipped" selected="@(Model.Status == "Shipped")">Shipped</option>
                            <option value="Completed" selected="@(Model.Status == "Completed")">Completed</option>
                            <option value="Cancelled" selected="@(Model.Status == "Cancelled")">Cancelled</option>
                        </select>
                        <button type="submit" class="btn btn-primary fw-bold py-2 shadow-sm">
                            <i class="bi bi-arrow-repeat me-2"></i> UPDATE STATUS
                        </button>
                    </div>
                </form>

                <div class="mt-4 p-3 rounded border bg-light small text-muted">
                    <i class="bi bi-info-circle me-1"></i> Việc cập nhật trạng thái sẽ ngay lập tức hiển thị trên trang cá nhân của khách hàng.
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .tracking-widest {
        letter-spacing: 0.15em;
    }

    .border-dashed {
        border-style: dashed !important;
    }

    .btn-white {
        background-color: #fff;
    }

    @@media print {
        .btn, .breadcrumb, header, .col-lg-4, .sidebar-heading, #sidebar-wrapper, .navbar {
            display: none !important;
        }

        .col-lg-8 {
            width: 100% !important;
        }

        .card {
            border: 1px solid #eee !important;
            box-shadow: none !important;
        }
    }
</style>