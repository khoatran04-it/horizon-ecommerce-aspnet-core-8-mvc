@model IEnumerable<Horizon.Models.Product>

@{
    ViewData["Title"] = "Inventory Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@* --- HEADER SECTION --- *@
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb small mb-1">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Dashboard</a></li>
                <li class="breadcrumb-item active">Products</li>
            </ol>
        </nav>
        <h2 class="fw-bold mb-0">Manage Products</h2>
    </div>
    <a asp-area="Admin" asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-lg me-2"></i>Create New Product
    </a>
</div>

@* --- FILTER CARD --- *@
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body p-3">
        <form asp-area="Admin" asp-controller="Products" asp-action="Index" method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label small fw-bold text-muted">SEARCH BY NAME</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="bi bi-search"></i></span>
                        <input type="text" name="searchString" class="form-control bg-light border-start-0"
                               value="@ViewData["CurrentSearchString"]" placeholder="Enter product name..." />
                    </div>
                </div>
                <div class="col-md-4">
                    <label class="form-label small fw-bold text-muted">CATEGORY</label>
                    <select name="productCategory" class="form-select bg-light" asp-items="ViewBag.ProductCategory">
                        <option value="">-- All Categories --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-dark w-100">
                        <i class="bi bi-filter me-2"></i>Filter
                    </button>
                </div>
                <div class="col-md-2">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">Reset</a>
                </div>
            </div>
        </form>
    </div>
</div>

@* --- PRODUCT TABLE --- *@
<div class="card border-0 shadow-sm overflow-hidden">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Product</th>
                    <th>Category</th>
                    <th class="text-center">Price</th>
                    <th class="text-center">Stock</th>
                    <th class="text-center">Status</th>
                    <th class="pe-4 text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="img-thumbnail-wrapper me-3 border rounded">
                                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/placeholder.png" : item.ImageUrl)"
                                             alt="Product" style="width: 50px; height: 50px; object-fit: cover;" />
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@item.Name</div>
                                        <div class="text-muted small">ID: #@item.Id</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-info bg-opacity-10 text-info px-3 py-2">@item.Category?.Name</span>
                            </td>
                            <td class="text-center fw-bold text-dark">
                                @item.Price.ToString("N0")₫
                            </td>
                            <td class="text-center">
                                <span class="fw-bold">@item.Quantity</span>
                            </td>
                            <td class="text-center">
                                @if (item.Quantity <= 0)
                                {
                                    <span class="badge bg-danger rounded-pill px-3">Out of Stock</span>
                                }
                                else if (item.Quantity <= 5)
                                {
                                    <span class="badge bg-warning text-dark rounded-pill px-3">Low Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-success rounded-pill px-3">Available</span>
                                }
                            </td>
                            <td class="pe-4 text-end">
                                <div class="btn-group shadow-sm">
                                    <a asp-area="Admin" asp-controller="Inventory" asp-action="AddStock" asp-route-productId="@item.Id"
                                       class="btn btn-sm text-success" title="Add Stock">
                                        <i class="bi bi-plus-square"></i>
                                    </a>
                                    <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-sm text-primary" title="Edit">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-area="Admin" asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm text-info" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-area="Admin" asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-sm text-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-5 text-muted">
                            <i class="bi bi-box-seam display-4 d-block mb-3 opacity-25"></i>
                            No products found in the arsenal.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .btn-white {
        background: #fff;
    }

        .btn-white:hover {
            background: #f8fafc;
        }

    .table thead th {
        font-weight: 700;
        color: #64748b;
        font-size: 0.75rem;
        text-transform: uppercase;
        border-bottom-width: 1px;
    }

    .img-thumbnail-wrapper {
        width: 52px;
        height: 52px;
        overflow: hidden;
        background-color: #fff;
    }
</style>