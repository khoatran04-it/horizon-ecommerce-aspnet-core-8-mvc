@model IEnumerable<ProductReceipt>

@{
    ViewData["Title"] = "Inventory Receipt History";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@* --- HEADER SECTION --- *@
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb small mb-1">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-decoration-none">Dashboard</a></li>
                <li class="breadcrumb-item active">Inventory History</li>
            </ol>
        </nav>
        <h2 class="fw-bold mb-0 text-dark">Stock Inflow Log</h2>
    </div>
    @* Admin có thể quay lại trang Products để thực hiện nhập kho mới *@
    <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-outline-primary shadow-sm">
        <i class="bi bi-plus-circle me-2"></i>New Stock Receipt
    </a>
</div>

@* --- BỘ LỌC NÂNG CAO (Advanced Filters) --- *@
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body p-3">
        <form asp-action="Index" method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label for="searchString" class="form-label small fw-bold text-muted">SEARCH BY PRODUCT</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="bi bi-search"></i></span>
                        <input type="text" name="searchString" id="searchString" class="form-control bg-light border-start-0"
                               value="@ViewData["CurrentSearchString"]" placeholder="Enter product name..." />
                    </div>
                </div>
                <div class="col-md-4">
                    <label for="categoryId" class="form-label small fw-bold text-muted">CATEGORY</label>
                    <select name="categoryId" id="categoryId" class="form-select bg-light" asp-items="ViewBag.CategoryList">
                        <option value="">-- All Categories --</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex gap-2">
                    <button type="submit" class="btn btn-dark flex-grow-1">
                        <i class="bi bi-filter me-2"></i>Filter
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
                </div>
            </div>
        </form>
    </div>
</div>

@* --- BẢNG NHẬT KÝ NHẬP HÀNG --- *@
<div class="card border-0 shadow-sm overflow-hidden">
    <div class="card-header bg-white py-3 border-bottom">
        <h6 class="fw-bold mb-0 text-uppercase small tracking-widest text-primary">
            <i class="bi bi-clock-history me-2"></i>Detailed Receipt Log
        </h6>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4 py-3">Receipt Date</th>
                    <th class="py-3">Equipment / Product</th>
                    <th class="py-3">Category</th>
                    <th class="text-center py-3">Qty Added</th>
                    <th class="text-end pe-4 py-3">Cost Price (Unit)</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-dark">@item.ReceiptDate.ToString("dd/MM/yyyy")</div>
                                <div class="text-muted small">@item.ReceiptDate.ToString("HH:mm")</div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="icon-box-sm bg-light rounded border me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                        <i class="bi bi-box-arrow-in-down text-success"></i>
                                    </div>
                                    <span class="fw-bold">@item.Product?.Name</span>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-secondary bg-opacity-10 text-secondary border px-3 py-2">
                                    @item.Product?.Category?.Name
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-success px-3 py-2 rounded-pill shadow-sm">
                                    +@item.Quantity
                                </span>
                            </td>
                            <td class="text-end pe-4">
                                <div class="fw-bold text-dark">@item.CostPrice.ToString("N0")₫</div>
                                <div class="text-muted small">Total: @((item.Quantity * item.CostPrice).ToString("N0"))₫</div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            <i class="bi bi-journal-x display-4 d-block mb-3 opacity-25"></i>
                            No stock receipt records found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .tracking-widest {
        letter-spacing: 0.15em;
    }

    .table thead th {
        font-weight: 700;
        color: #64748b;
        font-size: 0.75rem;
        text-transform: uppercase;
        border-bottom-width: 1px;
    }
    /* Hiệu ứng hover cho badge số lượng */
    .badge.bg-success:hover {
        transform: scale(1.1);
        transition: 0.2s;
    }
</style>