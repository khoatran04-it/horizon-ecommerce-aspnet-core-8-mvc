<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Horizon Admin</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/admin-style.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="d-flex" id="wrapper">
        @* --- SIDEBAR --- *@
        <div class="bg-white border-end" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom p-4">
                <h4 class="fw-bold text-primary mb-0">HORIZON <small class="text-muted fs-6">Admin</small></h4>
            </div>
            <div class="list-group list-group-flush p-2">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action border-0 rounded py-3">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>
                <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="list-group-item list-group-item-action border-0 rounded py-3">
                    <i class="bi bi-cart-check me-2"></i> Orders
                </a>
                <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="list-group-item list-group-item-action border-0 rounded py-3">
                    <i class="bi bi-box-seam me-2"></i> Products
                </a>
                <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="list-group-item list-group-item-action border-0 rounded py-3">
                    <i class="bi bi-tags me-2"></i> Categories
                </a>
                <a asp-area="Admin" asp-controller="Inventory" asp-action="Index" class="list-group-item list-group-item-action border-0 rounded py-3">
                    <i class="bi bi-house-door me-2"></i> Inventory
                </a>
                <a asp-area="Admin" asp-controller="Transactions" asp-action="Index" class="list-group-item list-group-item-action border-0 rounded py-3">
                    <i class="bi bi-currency-exchange me-2"></i> Transactions
                </a>
                <hr />
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action border-0 rounded py-3 text-danger">
                    <i class="bi bi-box-arrow-left me-2"></i> Back to Shop
                </a>
            </div>
        </div>

        @* --- PAGE CONTENT --- *@
        <div id="page-content-wrapper" class="flex-grow-1">
            @* Top Navigation *@
            <nav class="navbar navbar-expand-lg navbar-white bg-white border-bottom py-3 px-4 shadow-sm">
                <button class="btn btn-light border" id="menu-toggle"><i class="bi bi-list"></i></button>
                <div class="ms-auto d-flex align-items-center">
                    <span class="me-3 small text-muted">Hello, <strong>@User.Identity.Name</strong></span>
                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                        <i class="bi bi-person-fill"></i>
                    </div>
                </div>
            </nav>

            @* Main Content Area *@
            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> @* Dùng cho Dashboard *@
    <script>
        $("#menu-toggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>