<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Horizon Admin</title>

    @* Bootstrap & Icons (QUAN TRỌNG) *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    @* Google Fonts *@
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

    @* CSS tùy chỉnh *@
    <link rel="stylesheet" href="~/css/admin-style.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar bên trái -->
        <div class="bg-white border-end" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom p-4">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-decoration-none">
                    <h4 class="fw-bold text-primary mb-0">HORIZON <small class="text-muted fs-6">ADMIN</small></h4>
                </a>
            </div>
            <div class="list-group list-group-flush p-2">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action border-0 rounded py-2 my-1 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>
                <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="list-group-item list-group-item-action border-0 rounded py-2 my-1 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Products" ? "active" : "")">
                    <i class="bi bi-box-seam me-2"></i> Manage Products
                </a>
                <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="list-group-item list-group-item-action border-0 rounded py-2 my-1 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Categories" ? "active" : "")">
                    <i class="bi bi-tags me-2"></i> Manage Categories
                </a>
                <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="list-group-item list-group-item-action border-0 rounded py-2 my-1 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Orders" ? "active" : "")">
                    <i class="bi bi-cart-check me-2"></i> Manage Orders
                </a>
                <a asp-area="Admin" asp-controller="Inventory" asp-action="Index" class="list-group-item list-group-item-action border-0 rounded py-2 my-1 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Inventory" ? "active" : "")">
                    <i class="bi bi-journal-text me-2"></i> Receipt History
                </a>
                <div class="border-top my-3"></div>
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" target="_blank" class="list-group-item list-group-item-action border-0 rounded py-2 text-info">
                    <i class="bi bi-arrow-up-right-square me-2"></i> View Customer Site
                </a>
            </div>
        </div>

        <!-- Nội dung chính bên phải -->
        <div id="page-content-wrapper" class="flex-grow-1 bg-light">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm py-3 px-4">
                <button class="btn btn-outline-primary btn-sm" id="menu-toggle"><i class="bi bi-list"></i></button>
                <div class="ms-auto d-flex align-items-center">
                    <partial name="_LoginPartial" />
                </div>
            </nav>

            <div class="container-fluid p-4">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Script ẩn/hiện Sidebar
        $("#menu-toggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>