@model IEnumerable<Horizon.Models.Category>

@{
    ViewData["Title"] = "Category Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@* --- HEADER SECTION --- *@
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb small mb-1">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Dashboard</a></li>
                <li class="breadcrumb-item active">Categories</li>
            </ol>
        </nav>
        <h2 class="fw-bold mb-0">Manage Categories</h2>
    </div>
    <a asp-area="Admin" asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-lg me-2"></i>Create New Category
    </a>
</div>

@* --- CATEGORY TABLE CARD --- *@
<div class="card border-0 shadow-sm overflow-hidden">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4 py-3" style="width: 100px;">ID</th>
                    <th class="py-3">Category Name</th>
                    <th class="pe-4 py-3 text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-muted">#@item.Id</td>
                            <td>
                                <div class="fw-bold text-dark">@item.Name</div>
                            </td>
                            <td class="pe-4 text-end">
                                <div class="btn-group shadow-sm border rounded bg-white">
                                    <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-white text-primary border-0" title="Edit">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-area="Admin" asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-white text-info border-0" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-area="Admin" asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-white text-danger border-0" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center py-5 text-muted">
                            <i class="bi bi-tags display-4 d-block mb-3 opacity-25"></i>
                            No categories established yet.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Đồng bộ CSS với trang Products */
    .btn-white {
        background: #fff;
    }

        .btn-white:hover {
            background: #f8fafc;
        }

    .table thead th {
        font-weight: 700;
        color: #64748b;
        font-size: 0.75rem;
        text-transform: uppercase;
        border-bottom-width: 1px;
    }
</style>