@model DashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row g-4 mb-4">
    @* Card 1: Doanh thu *@
    <div class="col-md-3">
        <div class="card stat-card shadow-sm p-3">
            <div class="d-flex align-items-center">
                <div class="icon-box bg-primary bg-opacity-10 text-primary me-3">
                    <i class="bi bi-currency-dollar fs-4"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-0 small">Total Revenue</h6>
                    <h4 class="fw-bold mb-0">@Model.TotalRevenue.ToString("N0")₫</h4>
                </div>
            </div>
        </div>
    </div>
    @* Card 2: Đơn hàng *@
    <div class="col-md-3">
        <div class="card stat-card shadow-sm p-3">
            <div class="d-flex align-items-center">
                <div class="icon-box bg-success bg-opacity-10 text-success me-3">
                    <i class="bi bi-cart-check fs-4"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-0 small">Total Orders</h6>
                    <h4 class="fw-bold mb-0">@Model.TotalOrders</h4>
                </div>
            </div>
        </div>
    </div>
    @* Card 3: Sản phẩm *@
    <div class="col-md-3">
        <div class="card stat-card shadow-sm p-3">
            <div class="d-flex align-items-center">
                <div class="icon-box bg-info bg-opacity-10 text-info me-3">
                    <i class="bi bi-box-seam fs-4"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-0 small">Products</h6>
                    <h4 class="fw-bold mb-0">@Model.TotalProducts</h4>
                </div>
            </div>
        </div>
    </div>
    @* Card 4: Người dùng *@
    <div class="col-md-3">
        <div class="card stat-card shadow-sm p-3">
            <div class="d-flex align-items-center">
                <div class="icon-box bg-warning bg-opacity-10 text-warning me-3">
                    <i class="bi bi-people fs-4"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-0 small">Customers</h6>
                    <h4 class="fw-bold mb-0">@Model.TotalUsers</h4>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    @* Biểu đồ doanh thu *@
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm p-4 h-100">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="fw-bold mb-0">Revenue Overview</h5>
                <form method="get" class="d-flex align-items-center gap-2">
                    <select name="year" class="form-select form-select-sm" onchange="this.form.submit()" asp-items="ViewBag.YearList"></select>
                </form>
            </div>

            @* THAY ĐỔI Ở ĐÂY: Thêm div bao quanh với chiều cao cố định *@
            <div class="chart-container" style="position: relative; height:350px; width:100%">
                <canvas id="revenueChart"></canvas>
            </div>
        </div>
    </div>

    @* Cảnh báo tồn kho thấp *@
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm p-4 h-100">
            <h5 class="fw-bold mb-4 text-danger"><i class="bi bi-exclamation-triangle me-2"></i>Low Stock Alert</h5>
            <div class="list-group list-group-flush">
                @foreach (var p in Model.LowStockProducts)
                {
                    <div class="list-group-item border-0 px-0 d-flex justify-content-between align-items-center">
                        <div class="small fw-medium">@p.Name</div>
                        <span class="badge bg-danger rounded-pill">@p.Quantity left</span>
                    </div>
                }
                @if (!Model.LowStockProducts.Any())
                {
                    <p class="text-muted small">All items are sufficiently stocked.</p>
                }
            </div>
            <a asp-controller="Inventory" asp-action="Index" class="btn btn-light btn-sm mt-auto">Manage Inventory</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var ctx = document.getElementById('revenueChart').getContext('2d');
        var revenueChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.MonthlyRevenueLabels)),
                datasets: [{
                    label: 'Revenue (₫)',
                    data: @Html.Raw(Json.Serialize(Model.MonthlyRevenueValues)),
                    borderColor: '#2563eb',
                    backgroundColor: 'rgba(37, 99, 235, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4,
                    pointRadius: 4,
                    pointBackgroundColor: '#2563eb'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false, // Quan trọng: Cho phép biểu đồ khớp với chiều cao div cha
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { borderDash: [5, 5], color: '#e2e8f0' },
                        ticks: {
                            callback: function(value) {
                                return value.toLocaleString() + ' ₫'; // Thêm đơn vị tiền tệ cho trục Y
                            }
                        }
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });
    </script>
}