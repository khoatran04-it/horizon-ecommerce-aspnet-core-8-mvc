@using Horizon.Infrastructure
@model Order

@{
    ViewData["Title"] = "Deployment Dispatch - Checkout";
    // Lấy giỏ hàng từ Session để hiển thị tóm tắt ở cột phải
    var cart = Context.Session.Get<List<CartItem>>("Cart") ?? new List<CartItem>();
    decimal total = cart.Sum(item => item.Subtotal);
}

@* --- BREADCRUMB --- *@
<div class="py-3 bg-white border-bottom mb-4">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 small">
                <li class="breadcrumb-item"><a asp-area="Customer" asp-controller="Home" asp-action="Index" class="text-decoration-none">Home Base</a></li>
                <li class="breadcrumb-item"><a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index" class="text-decoration-none">Cargo Manifest</a></li>
                <li class="breadcrumb-item active fw-bold" aria-current="page">Deployment Dispatch</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container pb-5">
    <div class="row g-5">
        @* --- CỘT TRÁI: THÔNG TIN GIAO HÀNG --- *@
        <div class="col-lg-7">
            <div class="d-flex align-items-center mb-4">
                <div class="bg-primary text-white p-2 rounded-3 me-3">
                    <i class="bi bi-geo-alt fs-4"></i>
                </div>
                <div>
                    <h1 class="h3 fw-bold mb-0">DEPLOYMENT DISPATCH</h1>
                    <p class="text-muted small mb-0">Cung cấp tọa độ và định danh người nhận trang bị.</p>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Checkout" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small border-0 py-2"></div>

                        <div class="row g-4">
                            @* Recipient Name *@
                            <div class="col-12">
                                <label asp-for="CustomerName" class="form-label small fw-bold text-dark text-uppercase">Operative in Charge (Họ tên người nhận)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-person text-muted"></i></span>
                                    <input asp-for="CustomerName" class="form-control border-start-0 ps-0 bg-light" placeholder="e.g. John Doe" />
                                </div>
                                <span asp-validation-for="CustomerName" class="text-danger small"></span>
                            </div>

                            @* Shipping Address *@
                            <div class="col-12">
                                <label asp-for="ShippingAddress" class="form-label small fw-bold text-dark text-uppercase">Deployment Destination (Địa chỉ nhận hàng)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-map text-muted"></i></span>
                                    <input asp-for="ShippingAddress" class="form-control border-start-0 ps-0 bg-light" placeholder="Số nhà, tên đường, quận/huyện..." />
                                </div>
                                <span asp-validation-for="ShippingAddress" class="text-danger small"></span>
                            </div>

                            @* Phone Number *@
                            <div class="col-md-12">
                                <label asp-for="PhoneNumber" class="form-label small fw-bold text-dark text-uppercase">Comm-Link (Số điện thoại liên lạc)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-telephone text-muted"></i></span>
                                    <input asp-for="PhoneNumber" class="form-control border-start-0 ps-0 bg-light" placeholder="Số điện thoại nhận hàng..." />
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>

                            <div class="col-12 mt-5">
                                <div class="p-3 bg-light rounded-3 mb-4 border border-dashed text-center">
                                    <p class="small text-muted mb-0">
                                        <i class="bi bi-shield-lock-fill text-success me-1"></i>
                                        Thông tin của bạn được bảo mật bởi giao thức mã hóa Horizon.
                                    </p>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg py-3 fw-bold shadow">
                                        CONFIRM & PLACE ORDER <i class="bi bi-broadcast ms-2"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        @* --- CỘT PHẢI: TÓM TẮT ĐƠN HÀNG  --- *@
        <div class="col-lg-5">
            <div class="card border-0 shadow-sm rounded-4 sticky-top" style="top: 100px;">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="fw-bold mb-0">OPERATIONAL SUMMARY</h5>
                </div>
                <div class="card-body p-4">
                    @* Danh sách sản phẩm rút gọn *@
                    <div class="order-items-list mb-4" style="max-height: 300px; overflow-y: auto;">
                        @foreach (var item in cart)
                        {
                            <div class="d-flex align-items-center mb-3">
                                <div class="position-relative">
                                    <img src="@(item.ImageUrl ?? "/images/placeholder.png")" class="rounded border" style="width: 55px; height: 55px; object-fit: cover;" />
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-secondary border border-white">
                                        @item.Quantity
                                    </span>
                                </div>
                                <div class="ms-3 flex-grow-1">
                                    <h6 class="small fw-bold mb-0">@item.ProductName</h6>
                                    <span class="text-muted small">@item.Price.ToString("N0")₫</span>
                                </div>
                                <div class="text-end">
                                    <span class="small fw-bold">@item.Subtotal.ToString("N0")₫</span>
                                </div>
                            </div>
                        }
                    </div>

                    <hr class="border-secondary opacity-10">

                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Equipment Subtotal</span>
                        <span class="fw-medium">@total.ToString("N0")₫</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Logistics (Shipping)</span>
                        <span class="text-success fw-bold">FREE</span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4 p-3 bg-primary bg-opacity-10 rounded-3 border border-primary border-opacity-10">
                        <span class="h6 fw-bold mb-0 text-primary">TOTAL DUE</span>
                        <span class="h4 fw-bold text-primary mb-0">@total.ToString("N0")₫</span>
                    </div>

                    @* VnPay Reassurance *@
                    <div class="mt-4 p-3 rounded bg-light text-center border">
                        <img src="~/images/vnpay-logo.png" alt="VnPay" style="height: 25px;" class="mb-2 opacity-75">
                        <p class="small text-muted mb-0">
                            Bạn sẽ được chuyển đến cổng thanh toán bảo mật <b>VnPay</b> sau khi nhấn nút xác nhận đơn hàng.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .form-control:focus {
            background-color: #fff !important;
            box-shadow: 0 0 0 0.25rem rgba(37, 99, 235, 0.1) !important;
            border-color: var(--primary-color) !important;
        }

        .input-group-text {
            border-color: transparent;
        }

        .border-dashed {
            border-style: dashed !important;
        }
        /* Tùy chỉnh thanh cuộn cho danh sách sản phẩm */
        .order-items-list::-webkit-scrollbar {
            width: 4px;
        }

        .order-items-list::-webkit-scrollbar-thumb {
            background: #e2e8f0;
            border-radius: 10px;
        }
    </style>
}