@model Order

@{
    ViewData["Title"] = $"Mission Intel #{Model.Id}";

    // Logic xác định màu sắc cho trạng thái đơn hàng
    string statusClass = Model.Status switch
    {
        "Pending Payment" => "bg-warning text-dark",
        "Processing" => "bg-primary",
        "Shipped" => "bg-info text-white",
        "Completed" => "bg-success",
        "Cancelled" => "bg-danger",
        "Payment Failed" => "bg-danger",
        _ => "bg-secondary"
    };
}

@* --- BREADCRUMB --- *@
<div class="py-3 bg-white border-bottom mb-4">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 small">
                <li class="breadcrumb-item"><a asp-area="Customer" asp-controller="Home" asp-action="Index" class="text-decoration-none">Home Base</a></li>
                <li class="breadcrumb-item"><a asp-action="History" class="text-decoration-none">Order History</a></li>
                <li class="breadcrumb-item active fw-bold text-primary" aria-current="page">Mission #@Model.Id</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container pb-5">
    @* --- HEADER: MISSION STATUS --- *@
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 g-3">
        <div>
            <h1 class="h3 fw-bold mb-1">MISSION INTEL <span class="text-muted">#@Model.Id</span></h1>
            <p class="text-muted small mb-0"><i class="bi bi-calendar3 me-2"></i>Deployed on: @Model.OrderDate.ToString("f")</p>
        </div>
        <div class="text-md-end">
            <span class="badge @statusClass px-3 py-2 fs-6 rounded-pill shadow-sm">
                <i class="bi bi-info-circle me-1"></i> @Model.Status.ToUpper()
            </span>
        </div>
    </div>

    <div class="row g-4">
        @* --- CỘT TRÁI: THÔNG TIN GIAO HÀNG --- *@
        <div class="col-lg-7">
            <div class="card border-0 shadow-sm h-100 rounded-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="fw-bold mb-0 small text-uppercase tracking-widest"><i class="bi bi-geo-alt me-2 text-primary"></i>Deployment Coordinates</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="small text-muted text-uppercase fw-bold">Operative in Charge</label>
                            <p class="fw-bold text-dark mb-0">@Model.CustomerName</p>
                        </div>
                        <div class="col-md-6">
                            <label class="small text-muted text-uppercase fw-bold">Comm-Link (Phone)</label>
                            <p class="text-dark mb-0">@Model.PhoneNumber</p>
                        </div>
                        <div class="col-12">
                            <label class="small text-muted text-uppercase fw-bold">Destination Address</label>
                            <p class="text-dark mb-0">@Model.ShippingAddress</p>
                        </div>
                    </div>

                    @* Phân tách ảo *@
                    <div class="mt-4 pt-4 border-top border-dashed">
                        <div class="d-flex align-items-center text-primary small fw-bold">
                            <i class="bi bi-shield-check me-2"></i>
                            <span>Sẵn sàng cho việc triển khai trang bị tới tọa độ nêu trên.</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* --- CỘT PHẢI: TỔNG KẾT TÀI CHÍNH --- *@
        <div class="col-lg-5">
            <div class="card border-0 shadow-sm h-100 rounded-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="fw-bold mb-0 small text-uppercase tracking-widest"><i class="bi bi-credit-card me-2 text-primary"></i>Financial Summary</h5>
                </div>
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Cargo Value</span>
                        <span class="fw-medium">@Model.TotalAmount.ToString("N0")₫</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Logistic Fee</span>
                        <span class="text-success fw-bold">0₫ (FREE)</span>
                    </div>
                    <hr class="border-secondary opacity-10 my-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="h6 fw-bold mb-0">TOTAL FUNDING</span>
                        <span class="h3 fw-bold text-primary mb-0">@Model.TotalAmount.ToString("N0")₫</span>
                    </div>
                </div>
                <div class="card-footer bg-light border-0 py-3 text-center">
                    <small class="text-muted"><i class="bi bi-lock-fill me-1"></i> Giao dịch được bảo mật bởi VnPay Protocol</small>
                </div>
            </div>
        </div>

        @* --- DANH SÁCH THIẾT BỊ (CARGO LIST) --- *@
        <div class="col-12 mt-4">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="fw-bold mb-0 small text-uppercase tracking-widest"><i class="bi bi-box-seam me-2 text-primary"></i>Cargo Content</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light small fw-bold">
                            <tr>
                                <th class="ps-4 py-3">Equipment</th>
                                <th class="text-center py-3">Quantity</th>
                                <th class="text-end py-3">Unit Price</th>
                                <th class="text-end pe-4 py-3">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detail in Model.OrderDetails)
                            {
                                <tr>
                                    <td class="ps-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <img src="@(detail.Product.ImageUrl ?? "/images/placeholder.png")"
                                                 class="rounded border shadow-sm"
                                                 style="width: 60px; height: 60px; object-fit: cover;" />
                                            <div class="ms-3">
                                                <h6 class="fw-bold mb-0">@detail.Product.Name</h6>
                                                <span class="text-muted small">ID: #@detail.ProductId</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center fw-bold">@detail.Quantity</td>
                                    <td class="text-end">@detail.Price.ToString("N0")₫</td>
                                    <td class="text-end pe-4 fw-bold text-primary">@((detail.Quantity * detail.Price).ToString("N0"))₫</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @* --- ACTIONS --- *@
    <div class="mt-5 text-center">
        <a asp-action="History" class="btn btn-outline-dark px-4 py-2 fw-bold">
            <i class="bi bi-arrow-left me-2"></i> BACK TO ORDER HISTORY
        </a>
        <button class="btn btn-primary px-4 py-2 fw-bold shadow ms-2" onclick="window.print()">
            <i class="bi bi-printer me-2"></i> PRINT INTEL
        </button>
    </div>
</div>

<style>
    .tracking-widest {
        letter-spacing: 0.15em;
    }

    .border-dashed {
        border-style: dashed !important;
    }

    @@media print {
        .btn, .breadcrumb, header, footer {
            display: none !important;
        }

        .card {
            border: 1px solid #dee2e6 !important;
            shadow: none !important;
        }
    }
</style>