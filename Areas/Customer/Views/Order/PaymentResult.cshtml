@{
    ViewData["Title"] = "Transaction Report - Horizon Tactical";

    // Tự động xác định trạng thái dựa trên nội dung Message từ Controller gửi qua
    bool isSuccess = ViewBag.Message != null && ViewBag.Message.ToString().ToLower().Contains("success");
}

@* --- BREADCRUMB --- *@
<div class="py-3 bg-white border-bottom mb-5">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 small">
                <li class="breadcrumb-item"><a asp-area="Customer" asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted">Home Base</a></li>
                <li class="breadcrumb-item text-muted">Payment Protocol</li>
                <li class="breadcrumb-item active fw-bold text-primary" aria-current="page">Transaction Report</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                @* --- HEADER CỦA CARD (ĐỔI MÀU THEO KẾT QUẢ) --- *@
                <div class="card-header @(isSuccess ? "bg-success" : "bg-danger") py-4 text-center text-white border-0">
                    <div class="mb-2">
                        @if (isSuccess)
                        {
                            <i class="bi bi-check-circle-fill display-3"></i>
                        }
                        else
                        {
                            <i class="bi bi-exclamation-octagon-fill display-3"></i>
                        }
                    </div>
                    <h3 class="fw-bold text-uppercase mb-0">
                        @(isSuccess ? "Transaction Authorized" : "Transmission Failed")
                    </h3>
                </div>

                <div class="card-body p-4 p-md-5 text-center bg-white">
                    @* --- THÔNG ĐIỆP CHÍNH --- *@
                    <div class="mb-4">
                        <p class="fs-5 text-dark fw-medium">@ViewBag.Message</p>
                        <p class="text-muted small">
                            @(isSuccess
                                                        ? "Mã xác thực giao dịch đã được chấp thuận bởi VnPay Protocol. Đơn hàng của bạn đang được xử lý."
                                                        : "Đã xảy ra lỗi trong quá trình xác thực thanh toán. Vui lòng kiểm tra lại số dư hoặc phương thức thanh toán.")
                        </p>
                    </div>

                    @* --- CHI TIẾT KỸ THUẬT RÚT GỌN --- *@
                    <div class="bg-light rounded-3 p-3 mb-4 text-start">
                        <div class="d-flex justify-content-between mb-2 small">
                            <span class="text-muted">Giao thức:</span>
                            <span class="fw-bold">VNPAY-GATEWAY 2.1</span>
                        </div>
                        <div class="d-flex justify-content-between small">
                            <span class="text-muted">Thời gian phản hồi:</span>
                            <span class="fw-bold">@DateTime.Now.ToString("HH:mm:ss dd/MM/yyyy")</span>
                        </div>
                    </div>

                    @* --- HÀNH ĐỘNG TIẾP THEO --- *@
                    <div class="d-grid gap-2">
                        @if (isSuccess)
                        {
                            <a asp-area="Customer" asp-controller="Order" asp-action="History" class="btn btn-success btn-lg py-3 fw-bold shadow-sm">
                                <i class="bi bi-journal-text me-2"></i>VIEW DEPLOYMENT LOGS
                            </a>
                        }
                        else
                        {
                            <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index" class="btn btn-danger btn-lg py-3 fw-bold shadow-sm">
                                <i class="bi bi-arrow-repeat me-2"></i>RETRY PAYMENT
                            </a>
                        }
                        <a asp-area="Customer" asp-controller="Products" asp-action="Shop" class="btn btn-outline-secondary btn-lg py-2 fw-bold">
                            RETURN TO ARSENAL
                        </a>
                    </div>
                </div>

                @* --- FOOTER: BẢO MẬT --- *@
                <div class="card-footer bg-white border-top py-3 text-center">
                    <div class="small text-muted d-flex align-items-center justify-content-center">
                        <i class="bi bi-shield-lock-fill text-primary me-2"></i>
                        Secure Encryption provided by Horizon Security Group
                    </div>
                </div>
            </div>

            @* --- GỢI Ý HỖ TRỢ (QRF) --- *@
            <div class="mt-4 text-center">
                <p class="small text-muted">
                    Gặp sự cố với giao dịch? Liên hệ <a asp-controller="Home" asp-action="Contact" class="text-primary fw-bold text-decoration-none">Đội Phản Ứng Nhanh (QRF)</a> ngay lập tức.
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    /* Hiệu ứng rung nhẹ khi thất bại và hiệu ứng mượt khi thành công */
    .card-header.bg-danger {
        animation: shake-horizontal 0.5s cubic-bezier(.36,.07,.19,.97) both;
    }

    @@keyframes shake-horizontal {
        10%, 90% {
            transform: translate3d(-1px, 0, 0);
        }

        20%, 80% {
            transform: translate3d(2px, 0, 0);
        }

        30%, 50%, 70% {
            transform: translate3d(-4px, 0, 0);
        }

        40%, 60% {
            transform: translate3d(4px, 0, 0);
        }
    }
</style>